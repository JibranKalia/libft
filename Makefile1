NAME = libft.a

CC 		= 	gcc
CFLAGS 	= 	-Wall -Wextra -Werror 
SRC	= ft_isprint.c	

OBJ = $(SRC:.o=.c)

$(OBJ): %.o: %.c 
	@$(CC) -c $(CFLAGS) $< -o $@
	@echo "Building Object Files"

$(NAME): $(OBJ)
	@ar rc $(NAME) $(OBJ)
	@ranlib $(NAME)
	@echo "\033[32mBuilt library.\033[0m"

all: $(NAME)

clean:
	@rm -f $(OBJ)
	@echo "\033[32mCleaned up object files.\033[0m"

fclean: clean
	@rm -f $(NAME)
	@echo "\033[32mCleaned up compiled files.\033[0m"

re: fclean all

